#!/bin/bash
while true; do
	date=$(date +%a\ %d-%m-%Y\ %H:%M)
#	wttr=$(curl -s wttr.in/?T | head -4 | tail -2 | awk 'NR==1{a=$NF} NR==2{b=$(NF-1)" "$NF} END{print a,b}' || echo NO-INFO)
	freeram=$(free -gh | awk 'NR == 2 {print $3 "/" $2}')
	ip4lcl=$(iwctl station wlan0 show | grep -e 'Connected network' -e 'IPv4 address' | awk 'NR==1 {a=$3} NR==2 {print a, $3}' || echo NO-INFO)
	cputemp=$(($(cat /sys/class/hwmon/hwmon1/temp1_input) / 1000))Â°C
	xsetroot -name " $cputemp $freeram | $ip4lcl | $date"
	sleep 2
done
